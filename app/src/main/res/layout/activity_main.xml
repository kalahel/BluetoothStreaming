<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/goToServerActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server"
        android:onClick="goToServerActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.628" />

    <Button
        android:id="@+id/goToClientActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client"
        android:onClick="goToClientActivity"
        app:layout_constraintBottom_toBottomOf="@+id/goToServerActivityButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goToServerActivityButton"
        app:layout_constraintTop_toTopOf="@+id/goToServerActivityButton" />

</androidx.constraintlayout.widget.ConstraintLayout>